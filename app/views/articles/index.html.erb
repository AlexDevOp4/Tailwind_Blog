<div class="container">



	<div class="bg-white pt-16 pb-20 px-4 sm:px-6 lg:pt-24 lg:pb-28 lg:px-8">
		<div class="relative max-w-lg mx-auto divide-y-2 divide-gray-200 lg:max-w-7xl">
			<div class="text-center">
				<h2 class="text-3xl tracking-tight font-bold text-gray-900 sm:text-4xl">Blog App</h2>
				
					<p class="text-xl text-indigo-600 hover:text-indigo-500 text-center mt-10">
						<%= link_to "Create a new blog!", new_article_path, class: 'text-center'%></p>
			
			</div>
			<div class="mt-6 pt-10 grid gap-16 lg:grid-cols-2 lg:gap-x-5 lg:gap-y-12">
				<% @articles.each do |article| %>
				<div>
					<p class="text-sm text-gray-500">
						<time datetime="2020-03-16"><%= time_tag article.created_at %></time>
					</p>
					<a href="#" class="mt-2 block">
						<p class="text-xl font-semibold text-gray-900"><%= article.title %></p>
						<p class="mt-3 text-base text-gray-500"><%= article.body.truncate_words(4) %></p>
					</a>
					<div class="mt-3">
						<%= link_to "Read full story", article, :class => 'text-base font-semibold text-indigo-600 hover:text-indigo-500' %>
					</div>
				</div>
				<%end%>
			</div>
		</div>
	</div>


</div>